{
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "dist-parser"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "dotnet publish -c Release -o ./publish && tsdx watch --target node --format cjs",
    "build": "cross-env NODE_ENV=production tsdx build --target node --format cjs",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "postinstall": "patch-package"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint && pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "prettier-csharp-plugin",
  "author": "apalugniok",
  "module": "dist/prettier-csharp-plugin.esm.js",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/prettier": "^2.1.6",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^12.0.0",
    "patch-package": "^6.2.2",
    "pretty-quick": "^2.0.1",
    "rollup-plugin-copy": "^3.4.0",
    "ts-jest": "^26.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "prettier": "^2.2.1"
  }
}
